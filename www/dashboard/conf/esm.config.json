			},		
			{
				"name": "Zarafa Server",
				"host": "localhost",
				"port": 236,
				"protocol": "tcp"
			},
			{
				"name": "Email Server (incoming)",
				"host": "localhost",
				"port": 25,
				"protocol": "tcp"
			},
			{
				"name": "Email Server (outgoing)",
				"host": "localhost",
				"port": 587,
				"protocol": "tcp"
			},
			{
				"name": "SSH",
				"host": "localhost",
