{
	"esm": {
		"version": "2.5",
		"website": "http://www.ezservermonitor.com",
		"check_updates": false,
		"auto_refresh": 0,
		"theme": "blue",
		"custom_title": ""
	},
	"cpu": {
		"enable_temperature": false
	},
